using System;
using System.Collections.Generic;
using System.Text;

namespace animals_task
{
    public class TerrestrialAnimalV2
    {

        public int NumberOfLegs { get; set; }
        public string Name { get; set; }

        public TerrestrialAnimalV2(int numberOfLegs, string name)
        {
            NumberOfLegs = numberOfLegs;
            Name = name;
        }

        public void Move(int numberOfLegs)
        {
            Console.WriteLine($"I am walking with {NumberOfLegs}");
        }

        public void SayHi(int name)
        {
            Console.WriteLine($"Hello I am a(n) {Name}");
        }
    }
}

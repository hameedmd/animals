namespace animalV2
{ 
    public static class Program
    {
        private static void Main(string[] args)
        {
            var lionTa = new TerrestrialAnimalV1(4, "Lion");
            var giraffeTa = new TerrestrialAnimalV1(4, "Giraffe");
            var meerkatTa = new TerrestrialAnimalV1(2, "Meerkat");
            var owlAa = new AerialAnimal(2, "Owl");
            var butterflyAa = new AerialAnimal(6, "Butterfly");
            var eagleAa = new AerialAnimal(2, "Eagle");

            lionTa.SayHi();
            lionTa.Move();
            TerrestrialAnimalV1.Roam();
            giraffeTa.SayHi();
            giraffeTa.Move();
            TerrestrialAnimalV1.Roam();
            meerkatTa.SayHi();
            meerkatTa.Move();
            TerrestrialAnimalV1.Roam();
            owlAa.SayHi();
            owlAa.Move();
            AerialAnimal.Fly();
            butterflyAa.SayHi();
            butterflyAa.Move();
            AerialAnimal.Fly();
            eagleAa.SayHi();
            eagleAa.Move();
            AerialAnimal.Fly();
        }
    }
}

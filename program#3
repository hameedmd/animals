using System;

namespace animal1
{
    class Program
    {
        static void Main(string[] args)
        {
            var lionTA = new TerrestrialAnimalV1(4, "Lion");
            var giraffeTA = new TerrestrialAnimalV1(4, "Giraffe");
            var meerkatTA = new TerrestrialAnimalV1(2, "Meerkat");

            var owlAA = new AerialAnimal(2, "Owl");
            var butterflyAA = new AerialAnimal(6, "Butterfly");
            var eagleAa = new AerialAnimal(2, "Eagle");

            lionTA.SayHi();
            lionTA.Move();
            lionTA.Roam();

            giraffeTA.SayHi();
            giraffeTA.Move();
            giraffeTA.Roam();

            meerkatTA.SayHi();
            meerkatTA.Move();
            meerkatTA.Roam();

            owlAA.SayHi();
            owlAA.Move();
            owlAA.Fly();

            butterflyAA.SayHi();
            butterflyAA.Move();
            butterflyAA.Fly();

            eagleAa.SayHi();
            eagleAa.Move();
            eagleAa.Fly();
        }
    }
}

using System;

namespace animalV2
{
    public class Animal
    {
        private int NumberOfLegs { get; }
        private string Name { get; }

        protected Animal(int numberOfLegs, string name)
        {
            NumberOfLegs = numberOfLegs;
            Name = name;
        }
        public void Move()
        {
            Console.WriteLine($"I am walking with {NumberOfLegs} legs");
        }
        public void SayHi()
        {
            Console.WriteLine($"Hello I am a(n) {Name}");
        }
    }
}

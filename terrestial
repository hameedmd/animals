using System;
using System.Collections.Generic;
using System.Text;

namespace animals_task
{
    public class TerrestrialAnimalV2
    {
        public void Move(int numberOfLegs)
        {
            Console.WriteLine($"I am walking with {numberOfLegs} legs");
        }

        public void SayHi(string name)
        {
            Console.WriteLine($"Hello I am a(n) {name}");
        }
    }
}

